<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_splash"
    tools:context=".SplashActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/social_media_marketing"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

        />



    <TextView
        android:id="@+id/dont_worry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't Worry"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#f469a9"
        android:fontFamily="@font/opensansregular"
        />


    <TextView
        android:id="@+id/yordisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We know it's Personal"
        android:textSize="20sp"
        android:layout_below="@+id/dont_worry"
        android:layout_centerHorizontal="true"
        android:textColor="#9C27B0"
        android:fontFamily="@font/opensansregular"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/opensansregular"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:textColor="#673AB7"
        android:textStyle="bold"
        />



</RelativeLayout>