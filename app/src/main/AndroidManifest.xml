<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jlcsoftware.linkdisks">

    <application
        android:name=".WholeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LinkDisks"
        android:usesCleartextTraffic="true">
        <activity android:name=".gallery.GalleryApp"></activity>
        <activity android:name=".gallery.GalleryActivity"></activity>
        <activity android:name=".video_streaming.VideoTemplate" />
        <activity
            android:name=".video_streaming.OnlineVideoStreamingApp"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".passCodeView.PassCode" />
        <activity android:name=".login_activity.Login" />
        <activity android:name=".imagepicker.BSImagePicker"></activity>
        <activity android:name=".MainActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.jlcsoftware.linkdisks.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>